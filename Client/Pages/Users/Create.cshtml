@page
@model Client.Pages.Users.CreateModel
<h2>Create User</h2>

<form method="post">

    <div class="mb-3">
        <label class="form-label">Code</label>
        <input asp-for="Input.Code" class="form-control" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input asp-for="Input.FullName" class="form-control" />
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input asp-for="Input.Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input asp-for="Input.Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Birth Date</label>
        <input asp-for="Input.BirthDate" type="date" class="form-control" />
        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
    </div>

    <button class="btn btn-primary"
            onclick="return confirm('Bạn có chắc chắn muốn tạo người dùng này?');">
        Create
    </button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>

</form>
