@page
@model Client.Pages.Users.EditModel
<h2>Edit User</h2>

<form method="post">

    <div class="mb-3">
        <label>Code</label>
        <input asp-for="Input.Code" class="form-control" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Full Name</label>
        <input asp-for="Input.FullName" class="form-control" />
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Phone</label>
        <input asp-for="Input.Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Address</label>
        <input asp-for="Input.Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Birth Date</label>
        <input asp-for="Input.BirthDate" type="date" class="form-control" />
        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>

</form>
